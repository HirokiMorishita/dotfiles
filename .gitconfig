[alias]
  a       = add .
  adp     = add -p
  co      = checkout
  bch     = branch
  cm      = commit
  cma     = commit --amend
  cp      = cherry-pick
  sts     = status
  plog    = log --graph --pretty=format:'%C(red)%h %C(green)%an %Creset%s %C(yellow)%d%Creset'
[core]
  editor  = code --wait --reuse-window
  excludesfile  = ~/.gitignore
  autoCRLF = false
  quotepath = false
  commentChar = ";"
[ghq]
  root    = ~/src
[color]
  ui      = true
[diff]
  compactionHeuristic = true
[difftool]
  prompt = true
[mergetool]
  keepBackup = false
[commit]
  cleanup = strip
  template = ~/.gitmessage
[grep]
  lineNumber = true
[credential]
	helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager-core.exe
[fetch]
  prune = true
[user]
  useConfigOnly = true
[pull]
  rebase = false
[push]
  default = simple
[rerere]
  enabled = true
[init]
  defaultBranch = main
[include]
  path = ~/.gitconfig.local
  path = ~/.gitconfig.identity
  path = ~/.gitconfig.pager
