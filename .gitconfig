[alias]
  a       = add .
  adp     = add -p
  co      = checkout
  bch     = branch
  cm      = commit
  cma     = commit --amend
  cp      = cherry-pick
  sts     = status
  plog    = log --graph --pretty=format:'%C(red)%h %C(green)%an %Creset%s %C(yellow)%d%Creset'
[core]
  editor = code --wait --reuse-window
  excludesfile  = ~/.gitignore
  autoCRLF = false
  quotepath = false
  commentChar = ";"
  pager = delta
[ghq]
  root    = ~/src
[color]
  ui      = true
[diff]
  colorMoved = default
[commit]
  cleanup = strip
  template = ~/.gitmessage
[grep]
  lineNumber = true
[fetch]
  prune = true
[user]
  useConfigOnly = true
[pull]
  rebase = false
[push]
  default = simple
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
[merge]
  conflictstyle = diff3
[include]
  path = ~/.gitconfig.local
  path = ~/.gitconfig.identity
